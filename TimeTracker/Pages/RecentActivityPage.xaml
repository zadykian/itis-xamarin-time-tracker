<?xml version="1.0" encoding="UTF-8"?>

<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:buttons="clr-namespace:TimeTracker.Views.Buttons"
    xmlns:layouts="clr-namespace:TimeTracker.Views.Layouts"
    NavigationPage.HasNavigationBar="False"
    x:Class="TimeTracker.Pages.RecentActivityPage">
    <ContentPage.Content>
        <Grid RowDefinitions="280,*">

            <StackLayout Grid.Row="1" Margin="20">
                <StackLayout Orientation="Horizontal">
                    <Label Text="Recent Activity" VerticalOptions="Center" />
                    <buttons:BindableButton 
                                            BindingContext="{Binding ViewAllButtonModel}"
                                            FontAttributes="None" HorizontalOptions="EndAndExpand" />
                </StackLayout>

                <layouts:ExtendedFrame BackgroundColor="White" CornerRadius="20" HasShadow="True"
                                       Padding="10" VerticalOptions="FillAndExpand" ShadowOpacity="0.25"
                                       ShadowOffset="0,3" ShadowRadius="3">
                    <StackLayout>
                        <!-- recent activity list -->
                    </StackLayout>
                </layouts:ExtendedFrame>
            </StackLayout>

            <buttons:BindableButton BindingContext="{Binding StartTimerButtonModel}"
                                    Grid.Row="1" Margin="0,-30,0,0"
                                    VerticalOptions="Start" />
        </Grid>
    </ContentPage.Content>
</ContentPage>