<?xml version="1.0" encoding="UTF-8"?>

<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:TimeTracker.Models;assembly=TimeTracker"
             x:Class="TimeTracker.Views.TrackedPeriodView"
             x:DataType="models:TrackedPeriod">
	<ContentView.Content>
		<Frame Padding="0" CornerRadius="8" BackgroundColor="LightGray"
		       HasShadow="True" BorderColor="DarkGray">
			<StackLayout Orientation="Horizontal">

				<StackLayout HorizontalOptions="CenterAndExpand">
					<Label Text="{Binding Start, StringFormat='{}{0:HH\\:mm\\:ss}'}"
					       FontSize="32"
					       TextColor="Black" />
					<Label Text="start"
					       FontSize="Small"
					       TextColor="Black"
					       HorizontalTextAlignment="Center" />
				</StackLayout>

				<StackLayout HorizontalOptions="CenterAndExpand">
					<Label Text="{Binding End, StringFormat='{}{0:HH\\:mm\\:ss}'}"
					       FontSize="32" HorizontalTextAlignment="Center"
					       TextColor="Black" />
					<Label Text="end"
					       FontSize="Small"
					       TextColor="Black"
					       HorizontalTextAlignment="Center" />
				</StackLayout>

			</StackLayout>
		</Frame>
	</ContentView.Content>
</ContentView>