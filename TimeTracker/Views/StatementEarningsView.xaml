<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        x:Class="TimeTracker.Views.StatementEarningsView">
    <ContentView.Content>
        <Frame HasShadow="False" CornerRadius="30" Padding="0"
                BackgroundColor="{StaticResource PrimaryHeaderColor}">
            <StackLayout Orientation="Horizontal" Spacing="0" Margin="10,0"
                    VerticalOptions="Center" HorizontalOptions="Center">
                <Label Text="$" FontSize="12" Margin="0,5,0,0" TextColor="White" />
                <Label Text="12" x:Name="DollarsLabel" FontSize="24"
                        TextColor="White" />
                <Label Text=".00" x:Name="CentsLabel" FontSize="12"
                        Margin="0,5,0,0" TextColor="White" />
            </StackLayout>
        </Frame>
    </ContentView.Content>
</ContentView>
