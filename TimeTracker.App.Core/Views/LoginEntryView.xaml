<?xml version="1.0" encoding="UTF-8"?>

<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:TimeTracker.App.Core.ViewModels;assembly=TimeTracker.App.Core"
             x:Class="TimeTracker.App.Core.Views.LoginEntryView">
    <ContentView.Content>
        <Grid RowDefinitions="40,2" RowSpacing="0">
            <Entry x:DataType="viewModels:LoginEntryViewModel"
                   Placeholder="{Binding Placeholder}"
                   PlaceholderColor="DarkGray"
                   Text="{Binding Text}"
                   TextColor="Black"
                   IsPassword="{Binding IsPassword}" />
        </Grid>
    </ContentView.Content>
</ContentView>